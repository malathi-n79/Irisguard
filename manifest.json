{
  "manifest_version": 3,
  "name": "EyeGuard - AI-Powered Eye Saver",
  "version": "1.0",
  "description": "Prevents eye strain with smart break reminders and adaptive screen settings",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}